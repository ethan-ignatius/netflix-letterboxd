{
  "manifest_version": 3,
  "name": "Netflix + Letterboxd Overlay",
  "version": "0.1.0",
  "description": "Overlay Letterboxd data on Netflix using your export file.",
  "permissions": ["storage"],
  "host_permissions": ["https://api.themoviedb.org/*"],
  "action": {
    "default_title": "Netflix + Letterboxd",
    "default_popup": "popup/index.html"
  },
  "background": {
    "service_worker": "background/index.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://www.netflix.com/*"],
      "js": ["content/index.js"],
      "run_at": "document_idle"
    }
  ]
}
